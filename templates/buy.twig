{% extends 'layout.twig' %}

{% block body %}
{% for alert in alerts %}
<div class="alert alert-{{ alert.type }} alert-dismissible fade show" role="alert">
  {{ alert.message }}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{% endfor %}

<main class="container p-5">
  <form action="/buy" method="POST">
      <h1 class="lead">Buy:</h1>
      <div class="form-group">
          {% if symbol is empty %}
            <input autofocus  autocomplete="off" class="form-control" name="symbol" placeholder="Symbol" type="text" value="{{symbol}}" required>
          {% else %}
            <input  autocomplete="off" class="form-control" name="symbol" placeholder="Symbol" type="text" value="{{symbol}}" required>
          {% endif %}
      </div>
      <div class="form-group">
        {% if symbol is empty %}
          <input  class="form-control" name="shares" placeholder="Number of shares" type="number" min="1" required>
        {% else %}
          <input autofocus class="form-control" name="shares" placeholder="Number of shares" type="number" min="1" required>
        {% endif %}

      </div>
      <button class="btn btn-primary" type="submit" id="submit-button">Buy</button>
  </form>
</main>
{% endblock %}
